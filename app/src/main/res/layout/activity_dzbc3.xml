<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/biaoti"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018年04月 - 2018年05月"
                android:background="#FF660D"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#fff"
                android:padding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="周日"
                    android:layout_weight="1"
                    android:background="@drawable/hui_xian1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="周一"
                    android:layout_weight="1"
                    android:background="@drawable/hui_xian1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="周二"
                    android:layout_weight="1"
                    android:background="@drawable/hui_xian1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="周三"
                    android:layout_weight="1"
                    android:background="@drawable/hui_xian1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="周四"
                    android:layout_weight="1"
                    android:background="@drawable/hui_xian1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="周五"
                    android:layout_weight="1"
                    android:background="@drawable/hui_xian1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="周六"
                    android:layout_weight="1"
                    android:background="@drawable/hui_xian1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:padding="5dp"
                    />

            </LinearLayout>

            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="7"
                android:id="@+id/gridview"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乘车日期："
                android:textSize="30dp"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/txt_riqi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="20dp"
                android:text="2019.21.12.123"
                />


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="下一步"
                android:id="@+id/btn_xiayibu"
                android:background="@drawable/lan_yuan1"
                android:textColor="#fff"
                android:padding="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="100dp"
                android:textSize="30dp"

                />




        </LinearLayout>




    </LinearLayout>


</LinearLayout>