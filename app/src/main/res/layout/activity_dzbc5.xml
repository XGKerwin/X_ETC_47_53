<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/biaoti"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/luxian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:textSize="30dp"
            android:text="乘车路线："
            android:gravity="center"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="乘客姓名"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/txt_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="乘客姓名"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/txt_shangche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="乘客姓名"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/txt_xiache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="乘客姓名"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/txt_riqi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="100dp"
            android:text="乘客姓名"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            />


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="提交订单"
            android:id="@+id/btn_tijiao"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="300dp"
            android:textColor="#fff"
            android:background="@drawable/lan_yuan1"
            android:textSize="30dp"
            />



    </LinearLayout>



</LinearLayout>